[Unit]
Description={{ item.description }}
Requires=network.target
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/mqtt-{{ item.name }} {{ item.args }}
RestartSec=3
Restart=on-failure
StartLimitInterval=90
EnvironmentFile=/usr/local/etc/mqtt.env

[Install]
WantedBy=multi-user.target
